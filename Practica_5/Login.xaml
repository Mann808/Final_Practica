<Window x:Class="Practica_5.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica_5"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" FontSize="14" Background="Aqua" ResizeMode="NoResize">
    <Grid>
        <Border Background="Black" CornerRadius="20" Margin="20">
            <StackPanel Margin="20">
                <Label Content="Вход" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25"/>
                <Label Content="Имя" Foreground="White"/>
                <TextBox Name = "txtLogin" Background="Gray" Foreground="White"/>
                <Label Content="Пароль" Foreground="White"/>
                <PasswordBox Name="txtPassword" Background="Gray" Foreground="White" PasswordChar="*"/>
                <Button Name="btn_Login_in" Content="Войти" Margin="60 10" Background="Gray" Foreground="White" FontSize="18" Click="btn_Login_in_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
